<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity"
    android:background="#FFFFFF">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:id="@+id/top_blue"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:background="#40C4FF"

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingTop="15sp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/button"
        android:background="#40C4FF"
        android:layout_alignTop="@+id/top_blue"
        android:layout_alignRight="@+id/top_blue"
        android:layout_alignEnd="@+id/top_blue" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:iconifiedByDefault="false"
        android:background="@drawable/back"
        android:layout_below="@+id/top_blue"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/kitty"
        android:background="@drawable/back2"
        android:src="@drawable/kitty"
        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/search_view"
        android:layout_alignStart="@+id/search_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Daily Weather"
        android:textColor="#000000"
        android:id="@+id/textView2"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_below="@+id/search_view"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/weather"
        android:src="@drawable/weather"
        android:background="@drawable/back2"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/search_view"
        android:layout_alignStart="@+id/search_view"
        android:clickable="true"
        android:onClick="Weather"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date: 20 Jul(WED)"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="28/31â„ƒ    Rainy "
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/weather"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:layout_marginLeft="30dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/weather"
        android:layout_toRightOf="@+id/weather"
        android:layout_toEndOf="@+id/weather"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/trip"
        android:src="@drawable/trip"
        android:background="@drawable/back2"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="Trip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Culture Trip"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aspects: Food,People,Sight."
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/trip"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Destination : Hong Kong"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:layout_marginLeft="30dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/trip"
        android:layout_toEndOf="@+id/trip"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/qq"
        android:src="@drawable/job"
        android:background="@drawable/back2"
        android:layout_below="@+id/imageView9"
        android:layout_toLeftOf="@+id/imageView9"
        android:layout_toStartOf="@+id/imageView9"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="Job"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Job Hunting"
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:layout_alignTop="@+id/qq"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="And we will contact you !"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/qq"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Submit Your Resume"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:layout_marginLeft="30dp"
        android:id="@+id/imageView12"
        android:layout_below="@+id/qq"
        android:layout_toRightOf="@+id/qq"
        android:layout_toEndOf="@+id/qq"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/bottom_blue"
        android:background="#40C4FF"
        android:layout_alignRight="@+id/imageView12"
        android:layout_alignEnd="@+id/imageView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protect"
        android:id="@+id/switch1"
        android:onClick="toggle"
        android:layout_above="@+id/bottom_blue"
        android:layout_alignLeft="@+id/qq"
        android:layout_alignStart="@+id/qq" />

</RelativeLayout>
